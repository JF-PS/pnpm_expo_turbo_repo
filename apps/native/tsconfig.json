{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "paths": {
      "@ui/*": ["../../packages/ui/src/*"],
      "@ui": ["../../packages/ui/src/index.tsx"]
    }
  },
  "include": ["node_modules", "../../packages/**/*"],
  "extends": "expo/tsconfig.base"
}
